<div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
  <div class="login-form-1">
    <h2>Login</h2>
    <%= form_tag '/login', class: "form-signin" do %>
        <% if @user.errors.any? %>
            <div id="error_explanation">
              <h2>
                <%= pluralize(@user.errors.count, "error") %> prohibited
                this user from being saved:
              </h2>
              <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <label for="lg_username" class="sr-only">Email address</label>
            <%= text_field_tag :email, "", class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <label for="lg_password" class="sr-only">Password</label>
            <%= password_field_tag :password, "", class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group login-group-checkbox">
            <input type="checkbox" id="lg_remember" name="lg_remember">
            <label for="lg_remember">Keep me log in</label>
          </div>
        </div>
        <%= button_tag(type: 'submit', class: "login-button") do %>
            <i class="glyphicon glyphicon-menu-right"></i>
        <% end %>
      </div>
      <div class="etc-login-form">
        <p>Need an account? <%= link_to 'Create user account', '/signup' %></p>
      </div>
    <% end %>
  </div>
</div>
