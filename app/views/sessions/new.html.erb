<div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
    <%= form_tag '/login', class: "form-signin" do %>
        <h2 class="form-signin-heading">Login</h2>

        <label for="inputEmail" class="sr-only">Email address</label>
        <%= text_field_tag :email, "", class: "form-control" %>
        <label for="inputPassword" class="sr-only">Password</label>
        <%= password_field_tag :password, "", class: "form-control" %>
        <br>
        <%= submit_tag "Submit", class: "btn btn-lg btn-primary btn-block" %>
        <hr>
        <%= link_to 'Sign up', '/signup', class: "btn btn-lg btn-success btn-block" %>
    <% end %>
</div>
