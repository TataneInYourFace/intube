<div class="row">

  <div class="col-md-3">
    <p class="lead">New category</p>
    <div class="list-group">
      <%= link_to categories_path, class: "list-group-item" do %>
          <i class="glyphicon glyphicon-menu-left"></i> Back to categories
      <% end %>
    </div>
  </div>

  <div class="col-md-9">
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <strong><%= value %></strong>
        </div>
    <% end %>
    <div class="row">
      <%= render 'form' %>
    </div>
  </div>

</div>
