<div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
  <%= form_for :user, url: '/users', class: "form-signin" do |f| %>
      <h2 class="form-signin-heading">Sign up</h2>

      <label class="sr-only">Name</label>
      <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
      <label class="sr-only">Email address</label>
      <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
      <label class="sr-only">Password</label>
      <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
      <label class="sr-only">Password confirmation</label>
      <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
      <br>
      <%= f.submit "Sign up", class: "btn btn-lg btn-success btn-block" %>
      <hr>
      <%= link_to 'Login', '/login', class: "btn btn-lg btn-primary btn-block" %>
  <% end %>
  <% if @user.errors.any? %>
      <ul class="Signup_Errors">
        <% for message_error in @user.errors.full_messages %>
            <li>* <%= message_error %></li>
        <% end %>
      </ul>
  <% end %>
</div>