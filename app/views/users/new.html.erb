<div class="col-xs-offset-1 col-xs-10 col-md-offset-4 col-md-4">
  <div class="login-form-1">
    <h2>Sign up</h2>
    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <strong><%= value %></strong>
        </div>
    <% end %>
    <% if @user.errors.any? %>
        <ul class="Signup_Errors">
          <% for message_error in @user.errors.full_messages %>
              <li class="text-white">* <%= message_error %></li>
          <% end %>
        </ul>
    <% end %>
    <%= form_for :user, url: '/users', class: "text-left" do |f| %>
      <div class="login-form-main-message"></div>
      <div class="main-login-form">
        <div class="login-group">
          <div class="form-group">
            <label class="sr-only">Name</label>
            <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
          </div>
          <div class="form-group">
            <label class="sr-only">Email</label>
            <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
          </div>
          <div class="form-group">
            <label class="sr-only">Password</label>
            <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
          </div>
          <div class="form-group">
            <label class="sr-only">Password confirmation</label>
            <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password confirmation" %>
          </div>
        </div>
        <%= button_tag(type: 'submit', class: "login-button") do %>
            <i class="glyphicon glyphicon-menu-right"></i>
        <% end %>
      </div>
      <div class="etc-login-form">
        <p>Already register? <%= link_to 'Login', '/login' %></p>
      </div>
    <% end %>
  </div>
</div>
