<%= form_for([@movie, @movie.comments.build], :html => {:class => 'form-horizontal'}) do |f| %>
    <div class="form-group">
      <%= f.label :commenter, 'Your name', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_field :commenter, :class => 'form-control', :placeholder => 'Name' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :body, 'Your comment', :class => 'col-sm-2 control-label' %>
      <div class="col-sm-10">
        <%= f.text_area :body, :class => 'form-control', :placeholder => 'Comment' %>
      </div>
    </div>
    <%= f.submit 'submit', :class => 'btn btn-success pull-right' %>
<% end %>
