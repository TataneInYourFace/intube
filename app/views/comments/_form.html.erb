<div class="status-upload">
  <%= form_for([@movie, @movie.comments.build]) do |f| %>
      <%= f.hidden_field :commenter, :value => current_user.name %>
      <%= f.text_area :body, :placeholder => 'Comment the video...' %>
      <%= f.submit 'Share', :class => 'btn btn-success green pull-right' %>
  <% end %>
</div><!-- Status Upload  -->
