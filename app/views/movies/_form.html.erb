  <%= form_for @movie, :html => {:class => 'form-horizontal'} do |f| %>
      <% if @movie.errors.any? %>
          <div id="error_explanation">
            <h2>
              <%= pluralize(@movie.errors.count, "error") %> prohibited
              this video from being saved:
            </h2>
            <ul>
              <% @movie.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
      <% end %>

      <div class="form-group">
        <label class="col-sm-2 control-label">Categories</label>
        <div class="col-sm-10">
          <%= f.collection_select :category_id, Category.order("title").all, :id, :title, {prompt: "Select a category"}, {class: "form-control"} %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :title, 'Video title', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :title, :class => 'form-control', :placeholder => 'Video title' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :text, 'Video description', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_area :text, :class => 'form-control', :placeholder => 'Video description' %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :url, 'Video url', :class => 'col-sm-2 control-label' %>
        <div class="col-sm-10">
          <%= f.text_field :url, :class => 'form-control', :placeholder => 'Video url' %>
        </div>
      </div>
      <%= f.submit 'Save', :class => 'btn btn-success pull-right' %>
  <% end %>
