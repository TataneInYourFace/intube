<div class="text-right">
  <a class="btn btn-success">Add a video</a>
</div>
<div>
  <%= form_for @movie do |f| %>
      <p>
        <%= f.collection_select :category_id, Category.order("title").all, :id, :title %>
      </p>
      <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </p>
      <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
      </p>
      <p>
        <%= f.label :url %><br>
        <%= f.text_field :url %>
      </p>
      <p>
        <%= f.submit %>
      </p>
  <% end %>
</div>
