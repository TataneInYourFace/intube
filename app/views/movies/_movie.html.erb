<div class="col-sm-4 col-lg-4 col-md-4">
  <%= link_to movie_path(movie) do %>
      <div class="thumbnail">
        <img src="<%= format_youtube_thumbnail(movie.url) %>" alt="<%= movie.title %>">
        <div class="caption">
          <h4><%= link_to movie.title, movie_path(movie) %></h4>
          <p><%= h truncate(movie.text, :length => 100) %></p>
        </div>
      </div>
  <% end %>
</div>
