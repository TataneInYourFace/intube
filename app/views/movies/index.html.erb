<div class="row">

  <div class="col-md-3">
    <p class="lead">Videos</p>
    <div class="list-group">
      <%= link_to new_movie_path, class: "list-group-item" do %>
          <i class="glyphicon glyphicon-plus text-success"></i> Add a video
      <% end %>
    </div>

    <br>

    <%= render 'categories' %>

  </div>

  <div class="col-md-9">

    <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %> alert-dismissible fade in" role="alert">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
          <strong><%= value %></strong>
        </div>
    <% end %>

    <div class="row">
      <% if !@movies.empty? %>
        <%= render @movies %>
      <% else %>
        <h2 class="text-white text-center">No videos available.</h2>
      <% end %>
    </div>

  </div>

</div>
