<div class="row">

  <div class="col-md-3">
    <p class="lead">Videos</p>
    <div class="list-group">
      <%= link_to new_movie_path, class: "list-group-item" do %>
          <i class="glyphicon glyphicon-plus text-success"></i> Add a video
      <% end %>
    </div>

    <br>

    <%= render 'categories' %>

  </div>

  <div class="col-md-9">

    <div class="row">

      <% @movies.each do |movie| %>
          <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
              <img src="<%= format_youtube_thumbnail(movie.url) %>" alt="<%= movie.title %>">
              <div class="caption">
                <h4><%= link_to movie.title, movie_path(movie) %></h4>
                <p><%= link_to 'Edit', edit_movie_path(movie) %></p>
                <p><%= link_to 'Delete', movie_path(movie), method: :delete, data: {confirm: 'Are you sure?'} %></p>
                <p><%= h truncate(movie.text, :length => 100) %></p>
              </div>
              <!--<div class="ratings">
                <p class="pull-right">15 reviews</p>
                <p>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star"></span>
                  <span class="glyphicon glyphicon-star-empty"></span>
                </p>
              </div>-->
            </div>
          </div>
      <% end %>

    </div>

  </div>

</div>
