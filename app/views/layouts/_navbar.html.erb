<div id="main-container" class="container">
  <div class="row">
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "Intube", { :controller => "categories" }, :class => "navbar-brand" %>
        </div>

        <ul class="nav navbar-nav">
          <li><%= link_to "Categories", { :controller => "categories" } %></li>
          <li><%= link_to "Movies", { :controller => "movies" } %></li>
        </ul>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <%= form_tag(movies_path, :method => "get", class: "navbar-form navbar-left") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search movies", class: "form-control" %>
              <%= submit_tag "Search", class: "btn btn-default" %>
          <% end %>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
  </div>
</div>