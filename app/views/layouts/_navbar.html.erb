<div id="main-container" class="container">
  <div class="row">
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container-fluid">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to "inTube", root_path, :class => "navbar-brand" %>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li>
              <%= link_to '/categories' do %>
              <i class="glyphicon glyphicon-list"></i> Categories
                  <% end %>
            </li>
            <li>
              <%= link_to '/movies' do %>
              <i class="glyphicon glyphicon-film"></i> Videos
              <% end %>
            </li>
          </ul>

          <%= render 'layouts/form' %>

          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Signed
                in as <%= current_user.name %> <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to '/logout' do %>
                      <i class="glyphicon glyphicon-off text-danger"></i> Logout
                  <% end %>
                </li>
              </ul>
            </li>
          </ul>
        </div>
      </div><!-- /.container-fluid -->
    </nav>
  </div>
</div>